@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <a asp-action="ExportToCSV" class="btn btn-primary">Export List</a>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
       
        <form asp-action="ImportFromCSV" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file" class="align-self-lg-auto">Import List</label>
                <input type="file" name="file" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Import</button>
        </form>
    </div>
</div>
